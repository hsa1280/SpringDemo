<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="triangle" class="com.fruit.spring.Triangle">
		<!--<property name="type" value="Equilateral" />-->
		<!--
		<constructor-arg type="String" value="Equilateral"/>
		<constructor-arg type="String" value="hello"/>
		<constructor-arg type="int" value="20" />
		-->
		
		<!--
		<constructor-arg index="0" value="Equilateral"/>
		<constructor-arg index="1" value="20"/>
		<constructor-arg index="2" value="hello"/>
		-->
		<property name="pointA" ref="zeroPoint" />
		<property name="pointB" ref="Point2" />
		<property name="pointC" ref="Point3" />
	</bean>
	
	<bean id="zeroPoint" class="com.fruit.spring.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>
	
	<bean id="Point2" class="com.fruit.spring.Point">
		<property name="x" value="-20" />
		<property name="y" value="0" />
	</bean>
	
	<bean id="Point3" class="com.fruit.spring.Point">
		<property name="x" value="20" />
		<property name="y" value="0" />
	</bean>
	
</beans>